{
  "extends": "stylelint-config-standard",
  "plugins": ["stylelint-order"],
  "files": ["**/*.less"],
  "ignoreFiles": ["**/*.ts", "**/*.tsx"],
  "rules": {
    "property-no-unknown": null,
    "color-no-invalid-hex": null,
    "no-extra-semicolons": null,
    "selector-pseudo-class-no-unknown": [
      true,
      {
        "ignorePseudoClasses": ["global", "local"]
      }
    ],
    "at-rule-no-unknown": null,
    "at-rule-name-case": null,
    "selector-pseudo-element-colon-notation": "single",
    "string-quotes": "single",
    "block-closing-brace-newline-before": null,
    "order/properties-order": [
      "content",
      "display",
      "visibility",
      "position",
      "flex-wrap",
      "flex-direction",
      "justify-content",
      "justify-self",
      "align-items",
      "align-content",
      "flex-grow",
      "flex-shrink",
      "flex-basis",
      "flex-flow",
      "flex",
      "align-self",
      "grid",
      "grid-area",
      "grid-auto-columns",
      "grid-auto-flow",
      "grid-column",
      "grid-column-gap",
      "grid-gap",
      "grid-row",
      "grid-row-gap",
      "grid-column-start",
      "grid-column-end",
      "grid-row-start",
      "grid-row-end",
      "grid-template",
      "grid-template-areas",
      "grid-template-columns",
      "grid-template-rows",
      "grid-template-rows",
      "list-style",
      "list-style-type",
      "list-style-position",
      "list-style-image",
      "float",
      "height",
      "width",
      "max-height",
      "max-width",
      "min-height",
      "min-width",
      "top",
      "bottom",
      "left",
      "right",
      "margin",
      "margin-top",
      "margin-bottom",
      "margin-left",
      "margin-right",
      "padding",
      "padding-top",
      "padding-bottom",
      "padding-left",
      "padding-right",
      "font-family",
      "font-size",
      "font-weight",
      "line-height",
      "letter-spacing",
      "text-transform",
      "text-decoration",
      "text-decoration-style",
      "text-decoration-color",
      "text-decoration-thickness",
      "text-align",
      "white-space",
      "color",
      "overflow",
      "overflow-x",
      "overflow-y",
      "box-sizing",
      "opacity",
      "background",
      "background-color",
      "background-image",
      "background-size",
      "background-position",
      "background-repeat",
      "box-shadow",
      "object-fit",
      "object-position",
      "border",
      "border-top",
      "border-bottom",
      "border-left",
      "border-right",
      "border-color",
      "outline",
      "fill",
      "stroke",
      "transform",
      "transform-origin",
      "transition",
      "transition-delay",
      "transition-property",
      "animation",
      "animation-delay",
      "will-change",
      "cursor",
      "target",
      "z-index",
      "pointer-events",
      "user-select",
      "resize"
    ],
    "max-empty-lines": 1,
    "indentation": 2,
    "number-leading-zero": "always",
    "number-no-trailing-zeros": true,
    "declaration-colon-newline-after": null
  }
}
