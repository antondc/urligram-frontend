{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Linking: Launch Chrome",
      "type": "chrome",
      "request": "launch",
      "url": "http://0.0.0.0:4000",
      "webRoot": "${workspaceFolder}"
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Linking: Attach Node by Process ID",
      "processId": "${command:PickProcess}",
      "port": 9228,
      "skipFiles": ["${workspaceRoot}/node_modules/**/*.js"],
      "restart": true,
      "sourceMaps": true,
      "outFiles": ["${workspaceRoot}/dist/*.js"]
    }
  ],
  "compounds": [
    {
      "name": "Linking full",
      "configurations": ["Linking: Launch Chrome", "Linking: Attach Node by Process ID"]
    }
  ]
}
