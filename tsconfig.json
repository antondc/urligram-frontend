{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "keyofStringsOnly": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/*.test.*", "**/*.config.*"]
}
