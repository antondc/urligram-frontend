{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "keyofStringsOnly": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*"],
  "files": ["config.test.json"],
  "exclude": ["node_modules", "**/*.test.*", "**/*.config.*"]
}
